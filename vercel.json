{
  "builds": [
    { "src": "server/index.ts", "use": "@vercel/node" },
    { "src": "client/package.json", "use": "@vercel/static-build" }
  ],
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/server/index.ts"
    },
    {
      "source": "/((?!api|assets|src|@vite|node_modules).*)",
      "destination": "/index.html"
    }
  ]
}
