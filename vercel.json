{
  "buildCommand": "npm run build",
  "outputDirectory": "./dist",
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/server/index.ts"
    },
    {
      "source": "/((?!api|assets|src|@vite|node_modules).*)",
      "destination": "/index.html"
    }
  ],
  "functions": {
    "server/index.ts": {
      "runtime": "nodejs18.x",
      "maxDuration": 60
    }
  }
}